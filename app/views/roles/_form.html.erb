<%= form_for(@role) do |f| %>
<%= render 'layouts/errors', object: @role %>

<p class="form-group">
	<%= f.label :Nome %></br>
	<%= f.text_field :name, class:"form-control" %>
</p>
<p class="form-group">
	<%= f.label :Descricao, "Descrição" %></br>
	<%= f.text_area :description, placeholder: '(Opcional)', class:"form-control" %>
</p>

<%= f.submit class:'btn btn-primary' %>
<%= link_to 'Cancelar', root_path, class:'btn btn-default' %>
</p>

<%end%>

