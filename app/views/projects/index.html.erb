<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="pagee-header"><%= pluralize(@projects.size, "Projeto", "Projetos") %> 
				<small class="novo_projeto"><%= link_to new_project_path, class:'btn btn-default' do %> Novo Projeto
				<%end%></small>
			</h1>
		</div>
	</div>
	
	<% @projects.each do |project| %>
		<div class="hide_show">
			<div class="row">
				<div class="col-md-7">
					<h3>
						<p><%= link_to project.name , project%></p>
					</h3>
				</div>
			</div>
			<hr>
		</div>
		
<% end %>
</div>
