<div class="container">
	<div class="jumbotron">
		<article>
			<header>
				<h1><%= @project.name %></h1>
			</header>
			<hr>
			<h2>Cliente</h2>
				<p><%= @project.client %></p>
			<h3>Data de Início</h3>
				<p><%= @project.initial_date %></p>
			<hr>
			<h3>Data de Entrega</h3>
				<p><%= @project.date_ready %></p>
			<hr>
			<div class="panel panel-default">
			  <div class="panel-body">
					<p><%=simple_format @project.description%></p>
				</div>
			</div>
			<hr>
			<h3>Processo</h3>
				<%= link_to @project.procedures_project.procedure.name, procedure_path(@project.procedures_project.procedure) %>
			<h3><b><%="Equipe #{@project.team.name}" %></h3></b>
			
			<table class="table">
				<tr>
					<td><h4><b>Membros</b></h4></td>
					<td><h4><b>Papél</b></h4></td>
				</tr>
				<% @project.team.member_roles.each do |members| %>
					<tr>
						<td><%= members.member.name %></td>
						<td><%= members.role.name %></td>
					</tr>
				<%end%>
			</table>
			
			<hr>
		</article>
		 <%= link_to pluralize(@project.audits.size, "Auditoria","Auditorias"), project_audits_path(@project) %>
	</div>
		 <%= link_to projects_path, class:'btn btn-link' do %>
		 <i class="glyphicon glyphicon-home">Projetos</i>
		 	<%end%>

		 	<%= link_to edit_project_path(@project), class:'btn btn-link' do %>
		 <i class="glyphicon glyphicon-edit">Editar</i>
		 	<%end%>

		 	<%= link_to project_path(@project),method: :delete, data:{ confirm: "Deseja deletar este projetot?"}, class:'btn btn-link' do %>
		 <i class="glyphicon glyphicon-remove-sign">Deletar projeto</i>
		 	<%end%>
 </div>