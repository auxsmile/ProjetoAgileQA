  <%= form_for([@procedure]) do |f| %>
  <%= render '/layouts/errors', object: @procedure %>
  
    <div class="form-group">
      <%= f.label :Nome %><br>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :Descrição %><br>
      <%= f.text_area :description, class:"form-control"%>
    </div>
    
      <%= f.label :Prática %>
  			<div id="pratices_procedure">
            <%= f.fields_for :pratices_procedures do |pp_fields| %>
               <% render partial: 'pratices_procedure_fields', locals: { f: pp_fields } %>
            <%end%>
            <%= link_to_add_association('Selecionar', f, :pratices_procedures,  class:'glyphicon glyphicon-plus') %>
         </div>
         <div id="pratices">
            <% f.fields_for :pratices do |pratices_fields| %>
               <%= render partial: 'pratice_fields', locals: {f: pratices_fields} %>
            <%end%>
            </br>
            <%= link_to_add_association('Criar', f, :pratices,  class:'glyphicon glyphicon-plus') %>
         </div>
      </br>
      <%= f.submit class:'btn btn-primary' %>
      <%= link_to 'Cancelar', procedures_path(@procedure), class:'btn btn-default' %>
  <%end%>
