<div class="container">
	<div class="jumbotron">
		<article>			
			<header>
				<h1><%= @pratice.name %></h1> 			
			</header>
			<hr>
				<div class="panel-body">
					<h3>Descrição</h3>
						<div class="panel panel-default">
							<p style= "text-align: justify;"><%= simple_format @pratice.description%></p>
